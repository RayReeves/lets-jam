<h2 class="jammin signup-header">Create An Account</h2>
<div class="grid-x align-center">
  <div class="cell small-10 medium-8 large-6">
    <div class="sign-up-form grid-x align-center">
      <div class="cell small-10 large-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email, class: "label"%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :username, class: "label" %><br />
            <%= f.text_field :username %>
          </div>
          
          <div class="field">
            <%= f.label :first_name, "First Name", class: "label" %><br />
            <%= f.text_field :first_name %>
          </div>
          
          <div class="field">
            <%= f.label :last_name, "Last Name", class: "label" %><br />
            <%= f.text_field :last_name %>
          </div>
          
          <div class="field">
            <%= f.label :zip_code, "Zip Code", class: "label" %><br />
            <%= f.text_field :zip_code %>
          </div>
          

          <div class="field">
            <%= f.label :password, class: "label" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        <div>
      </div>
      
      <div class="actions">
        <%= f.submit "Sign up", class: "signup-button" %>
        <%= render "devise/shared/links" %>
      </div>
      <% end %>
      
  </div>
</div>
